<dl tal:define="item view/item">
  <tal:rep repeat="key python:view.get_obj_fields(view.item)">
  <dt>
  <span tal:content="python: view.name_as_title(key)"
           tal:attributes="title key">Label</span>
  </dt>
  <dd >
  <span tal:content="item/?key"></span>
  <em tal:condition="not: item/?key">No value</em>
  </dd>
  </tal:rep>
</dl>
