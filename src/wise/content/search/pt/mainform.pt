<div id="wise-search-form">
  <ul>
    <tal:rep tal:repeat="info view/main_forms">
    <li tal:define="name python:info[0];
      title python: info[1];
      active python: view.name == name"
     tal:attributes="class python: active and 'tab-active'"
      >
      <a href=""
         tal:attributes="href string:./@@${name}"
         tal:content="title"></a>
    </li>
    </tal:rep>
  </ul>

  <h2 tal:content="view/title">Title here</h2>

  <metal:block use-macro="context/@@ploneform-macros/titlelessform">


  <div tal:content="view/get_all_mainforms"></div>

    <metal:slot fill-slot="actions">
      <metal:block use-macro="context/@@ploneform-macros/actions" />
      <div tal:content="structure view/subform | nothing">subform here</div>
    </metal:slot>

    <metal:slot fill-slot="formtop">
      <style>
        #wise-search-form dl {
          overflow: hidden;
        }
        #wise-search-form dt {
          width: 20rem;
          float: left;
          clear: left;
          border-right: 1px solid #CCC;
          margin-top: 0.4rem;
        }
        #wise-search-form dd {
          float: left;
          width: 48rem;
          border-left: 1px solid #CCC;
          margin-left: -1px;
          margin-top: 0.4rem;
          background-color: #EEE;
          padding: 0.4rem;
          overflow: auto;
        }
        .extra-details {
          border-top: 1px solid #CCC;
          padding-top: 1rem;
        }
        .label {
          color: Black;
        }
      </style>
    </metal:slot>

  </metal:block>
</div>
